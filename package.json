{
  "name": "yacht-dice-game",
  "version": "1.0.0",
  "description": "Yacht Dice Game - Full Stack Application",
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "./gradlew bootRun",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm-run-all build:backend build:frontend",
    "build:backend": "./gradlew build",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run dev"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
